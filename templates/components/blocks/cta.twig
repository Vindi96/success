{% set title = theBlock.title %}
{% set desc = theBlock.description %}
{% set action = theBlock.action %}
{% set linkLabel = theBlock.linkLabel %}
{% set smallText = theBlock.linkSmallText %}
{% set background = theBlock.backgroundImage.all() %}

<div class="cta element--py">
    {% for img in background %}
        <div class="cta__bg">
            <img data-src={{img.url}} src="dist/images/placeholder.jpeg" alt="cta" class="lazy">
            <div class="cta__overlay"></div>
        </div>
    {% endfor %}
    
    <div class="container">
        {% if title %}
            <div class="cta__title" data-fadein>
                <h2>{{title}}</h2>
            </div>
        {% endif %}
        {% if desc %}
            <div class="cta__desc typography" data-fadein>
                {{desc}}
            </div>
        {% endif %}
        
        <div class="cta__btn" data-fadein>
            {% if action %}
                <a href="{{action.url}}" class="btn btn--yellow">
                    {% if linkLabel %}
                        <span>{{linkLabel}}</span>
                        {% else %}
                        <span>{{action}}</span>
                    {% endif %}
                </a>
                <p>{{smallText}}</p>
            {% endif %}
            
        </div>
    </div>
</div>