{% set title = theBlock.blockTitle %}
{% set desc = theBlock.description %}
{% set pathways = theBlock.pathways.all() %}
{% set action = theBlock.action %}
{% set actionLabel = theBlock.linkLabel %}

<div class="pathways">
    <div class="container">
        {% if title %}
            <div class="pathways__title blockTitle" data-fadein>
                {{title}}
            </div>
        {% endif %}
        {% if desc %}
            <div class="pathways__desc typography" data-fadein>
                {{desc}}
            </div>
        {% endif %}
        {% if action %}
            <div class="pathways__action" data-fadein>
                <a href="{{action.url}}" class="btn">
                    <span>{{actionLabel}}</span>
                </a>
            </div>
        {% endif %}
        {% if pathways %}
            <div class="pathways__list">
                {% for pathway in pathways %}
                    <div class="pathway" data-fadein>
                        <a href="{{pathway.action.url}}" class="pathway__wrap">
                            {% if pathway.title %}
                                <div class="pathway__title">
                                    <h3>{{pathway.title}}</h3>
                                </div>
                            {% endif %}
                            {% if pathway.description %}
                                <div class="pathway__body typography">
                                    {{pathway.description}}
                                </div>
                            {% endif %}
                            {% if pathway.action %}
                                <div class="pathway__btn">
                                    <div class="btn btn--small">
                                        <span>{{pathway.linkLabel}}</span>
                                    </div>
                                </div>
                            {% endif %}
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>